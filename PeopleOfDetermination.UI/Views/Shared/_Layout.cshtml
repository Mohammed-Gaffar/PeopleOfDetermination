<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Services</title>



    <!-- Favico -->
    <link rel="apple-touch-icon" sizes="180x180" href="~/assets/imgs/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/assets/imgs/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/assets/imgs/favicon/favicon-16x16.png">
    <link rel="manifest" href="~/assets/imgs/favicon/site.webmanifest">
    <link rel="mask-icon" href="~/assets/imgs/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#ffffff">
    <meta name="theme-color" content="#ffffff">

    <!-- Core Css Files -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/assets/css/identity.css" />

    <link rel="stylesheet" href="~/assets/css/jquery.paginate.css">
    <link href="~/css/site.css" rel="stylesheet" />
    <!-- Custom css File  -->
    <link rel="stylesheet" href="~/assets/css/app.css" />
    
    <link rel="stylesheet" href="~/lib/sweetalert2/sweetalert2.min.css" />
</head>

<body dir="rtl">

    <nav class="main_navbar">
        <nav class="navbar navbar-expand-lg top_nav">
            <div class="container-fluid">
                <a class="kfu_logo_wrap" asp-area="" asp-controller="Services" asp-action="Index">
                    <img src="~/assets/imgs/KFU_Logo_Dark.png" alt="KFU ICON LOGO">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list"></i>
                </button>
                <div class="offcanvas offcanvas-end" id="navbarSupportedContent">
                    <div class="offcanvas-header">
                        <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Services Catalog</h5>
                        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body justify-content-end">
                        <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">الصفحة الرئيسية</a>
                            </li>
                            @if (User.IsInRole("Admin") || User.IsInRole("Super_Admin"))
                            {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Users" asp-action="Index">المستخدمين</a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Create">إضافة</a>
                            </li>
                            }
                        </ul>
                        <ul class="navbar-nav align-items-center d-none d-lg-flex">
                            <li class="nav-item">|</li>
                        </ul>
                        <partial name="_LoginPartial" />
                       
                    </div>
                </div>
            </div>
        </nav>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="bg-blue py-3">
        <p class="m-0 text-white text-center">
            All Rights Reserved for KFU © 2024 | Designed and Developed by Deanship of E-Learning and Information Technology
        </p>
    </footer>


    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/jquery-3.4.1.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>

    <script src="~/lib/sweetalert2/sweetalert2.min.js" asp-append-version="true"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @* <script src="//cdn.datatables.net/2.0.3/js/dataTables.min.js" asp-append-version="true"></script> *@


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
