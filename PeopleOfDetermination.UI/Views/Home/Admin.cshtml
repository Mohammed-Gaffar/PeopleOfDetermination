@model PeopleOfDetermination.UI.Dto.ServicesDTO

@{
    ViewData["Title"] = "Home Page";
}



<div class="row" style="margin:15px;">
    <h2 tabindex="0">Dashbord</h2>

</div>


<hr style="width:90%" />

<div class="row" style="padding:2%">
    
        <div class="col-md-3">
            <div class="card card-primary  hover-card" style="height:650px">
                <div class="card-header bg-gold">
                </div>

                <div class="card-body bg-opacity-10 bg-black">
                    <div class="dash-card center" style="height:80%;">
                        
                    </div>
                    <br />
                    <div class="text-center d-flex">
                        <h2>اجمالي عدد الخدمات </h2>
                        &emsp;&emsp;
                        <h2>
                            @Model.totoalServices
                        </h2>
                    </div>
                </div>

                <div class="card-footer bg-gold text-start">
                    <a  asp-action="Services" asp-controller="Home" class="btn btn-primary">صفحة الخدمات</a>
                </div>
            </div>
        </div>


        <div class="col-md-3">
            <div class="card hover-card">
                <div class="card-body">
                   <div class="row">
                        <div class="col">
                            <p class="text-success">
                                <div class="mt-2 lead"><br />خدمات فعالة</div>
                                <h2 class="card-title" style="font-size:1.8em;">@Model.ActiveServices</h2>
                            </p>
                        </div>
                        <div class="col text-start" style="padding:0px">
                            <i class="bi bi-check bi-2x p-3 bg-success" style="font-size:100px"></i>
                        </div>
                   </div>
                </div>
            </div>
            <br />
            <div class="card hover-card">
                <div class="card-body">
                    <div class="row">

                        <div class="col">
                            <p class="text-success">
                                <div class="mt-2 lead"><br />خدمات غير فعالة</div>
                                <h2 class="card-title" style="font-size:1.8em;">@Model.DisableServices</h2>
                            </p>
                        </div>
                        <div class="col text-start" style="padding:0px">
                            <i class="bi bi-ban bi-2x p-3 bg-danger" style="font-size:100px"></i>
                        </div>

                    </div>

                </div>
            </div>


        </div>

        <div class="col-md-3">
            <div class="card tilebox-one hover-card">
                <div class="card-body" style="height:fit-content">
                    <i class="dripicons-basket float-end text-muted"></i>
                    <h6 class="text-muted text-uppercase mt-0">المستخدمين </h6>
                    <i class="bi bi-people-fill" style="font-size:220px"></i>

                    <h2>عدد المستخدمين</h2>
                    <h2>@Model.TotalUsers</h2>

                    <div class="text-start">
                        <a asp-action="Index" asp-controller="Users" class="btn btn-primary">إدارة المستخدمين </a>
                    </div>
                </div>
            </div>
        </div>
        



